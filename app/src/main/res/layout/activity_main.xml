<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/txtTitleSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/commonMargin"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/tvleftParagraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AAAAAA asdfsdk kjkjk lk klkjlkjjlkj kljljkj"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_margin="@dimen/commonMargin"/>

        <TextView
            android:id="@+id/tvRightParagraph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="asdasdsa asd kklj lkasd adad asdas jlk"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_margin="@dimen/commonMargin"/>
        
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvleftParagraph, tvRightParagraph"
            android:layout_marginBottom="@dimen/commonMargin"/>

        <ImageView
            android:id="@+id/imgLabyrinth"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/labyrinth"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            android:layout_margin="@dimen/commonMargin"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>